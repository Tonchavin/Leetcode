from collections import Counter
class Solution:
        def equalFrequency(self, word: str) -> bool:
        c = Counter(word)
        min_value = min(c.values())
        max_value = max(c.values())
        count_zero = 0
        count_one = 0
        for v in c.values():
            if max_value - min_value >= 2:
                return False
            elif v - min_value == 0:
                count_zero += 1
            elif v - min_value == 1:
                count_one += 1
        print(count_zero)
        print(count_one)
        if count_zero == len(c.values()) or count_one > 1:
            return False
        else:
            return True
